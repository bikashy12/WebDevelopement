<%- include('partials/header'); -%>
<h1>Home</h1>
<p> <%= homeContent %> </p>
  <% posts.forEach(function(post){ %>
    <h2><%=post.title%></h2>
    <%let content =  post.content;%>

    <%if(content.length > 100){ %>
    <%content = content.substring(0, 100)+"...."; %>
    <%}%>

    <p><%= content %>  <a href="posts/<%=post.title%>" >Read More</a></p>
  <% }) %>
<%- include('partials/footer'); -%>
